<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

   <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/next_presenter"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" >

    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="24dp" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:background="@drawable/mineditbg"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:text="5"
            android:textColor="@color/neutral"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="to"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMaxTime"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:background="@drawable/maxeditbg"
            android:onClick="maxButtonOnClick"
            android:text="7"
            android:textColor="@color/neutral"
            android:textStyle="bold" />

        <Button
            android:id="@+id/speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:onClick="buttonOnClick"
            android:text="@string/speech"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/table_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp"
        android:onClick="buttonOnClick"
        android:text="@string/table" 
        android:textStyle="bold" />

    <Button
        android:id="@+id/evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/table_topic"
        android:layout_below="@+id/table_topic"
        android:onClick="buttonOnClick"
        android:text="@string/evaluation" 
        android:textStyle="bold" />
    
     <RelativeLayout
         android:id="@+id/reportLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_below="@+id/evaluation"
         android:background="@drawable/partsbg">

         <ListView
             android:id="@+id/listView1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:layout_alignParentTop="true"
             android:layout_above="@+id/button1">
         </ListView>

         <Button
             android:id="@+id/button1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:onClick="deleteAllClick"
             android:text="Delete All" 
             android:textStyle="bold" />

    </RelativeLayout>

    <Chronometer
         android:id="@+id/quicktimer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/reportLayout"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/table_topic"
         android:layout_toRightOf="@+id/linearLayout1"
         android:background="@drawable/qtbackground"
         android:onClick="quickTimerOnClick"
         android:gravity="center_vertical|center_horizontal|center"
         android:textSize="30sp"
         android:textStyle="bold"
         android:text="Quick Timer"
         android:clickable="true"/>

</RelativeLayout>