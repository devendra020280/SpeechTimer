<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.speechtimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.speechtimer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.speechtimer.Timer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_timer"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.listtest.TestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_test"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.speechtimer.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.speechtimer.ReportActivity"
            android:label="@string/title_activity_report" >
        </activity>
    </application>

</manifest>
